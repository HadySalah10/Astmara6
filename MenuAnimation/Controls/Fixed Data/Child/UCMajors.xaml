<UserControl x:Class="Astmara6Con.Controls.UCMajors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Astmara6Con.Controls"
             mc:Ignorable="d" 
              Height="484" Width="746" >
    <UserControl.Resources>
        <Color x:Key="1">#FF3580BF</Color>
        <Color x:Key="Color1\">#FFECE3E3</Color>
    </UserControl.Resources>
    <Grid>
        <Label Content="اسم القسم" HorizontalAlignment="Left" Margin="658,226,0,0" VerticalAlignment="Top" Background="{x:Null}">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </Label.Foreground>
        </Label>
        <Button x:Name="BTNBack" Content="عودة" HorizontalAlignment="Left" Margin="0,421,0,0" VerticalAlignment="Top" Width="77" Height="29" Click="BTNBack_Click">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </Button.Background>
        </Button>
        <Button x:Name="BTNNext" Content="التالي" HorizontalAlignment="Left" Margin="0,455,0,0" Width="77" Height="Auto" Click="BTNNext_Click">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </Button.Background>
        </Button>
        <Label Content="اسم الشعبة" HorizontalAlignment="Left" Margin="451,223,0,0" VerticalAlignment="Top" Background="{x:Null}">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </Label.Foreground>
        </Label>
        <TextBox x:Name="TBNameMajors" HorizontalAlignment="Left" Height="25" Margin="324,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFECE3E3">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </TextBox.BorderBrush>
        </TextBox>
        <ComboBox x:Name="CBNameDepartment" HorizontalAlignment="Left" Margin="533,224,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.Background>
                <SolidColorBrush Color="{DynamicResource Color1\\}"/>
            </ComboBox.Background>
            <ComboBox.BorderBrush>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </ComboBox.BorderBrush>
        </ComboBox>
        <Button x:Name="BTNAdd" Content="اضافة" HorizontalAlignment="Right" Margin="0,0,442,233" VerticalAlignment="Bottom" Width="68" Height="28">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource 1}"/>
            </Button.Background>
        </Button>
        <DataGrid x:Name="DGMajorsView" HorizontalAlignment="Left" FlowDirection="RightToLeft" Width="425" Margin="296,283,0,0" Height="191" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="         اسم القسم        " />
                <DataGridTextColumn Header="         اسم الشعبة        " />
                <DataGridTemplateColumn ClipboardContentBinding="{x:Null}" Header="تعديل"/>
                <DataGridTemplateColumn ClipboardContentBinding="{x:Null}" Header="حذف"/>




            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
